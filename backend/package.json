{
  "name": "srt-streaming-backend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "tsx watch server.ts",
    "build": "tsc",
    "pm2": "npm run build && pm2 start ecosystem.config.cjs --env production",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "node dist/db/migrate.js",
    "db:push": "drizzle-kit push:pg"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.30.9",
    "express": "^4.18.3",
    "pino": "^8.21.0",
    "pg": "^8.11.5",
    "zod": "^3.22.4",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.24",
    "@types/pg": "^8.11.4",
    "@types/ws": "^8.5.10",
    "drizzle-kit": "^0.20.14",
    "nodemon": "^3.1.0",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  }
}